                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_0.5"
                android:background="#18171c"/>
            <TextView
                android:id="@+id/tab_4"
                android:padding="@dimen/margin_10"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
