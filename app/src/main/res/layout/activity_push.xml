<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnableHeaderTranslationContent="true"
        app:srlEnablePreviewInEditMode="false">

        <View
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlAccentColor="@android:color/black" />

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingTop="?attr/actionBarSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="55dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/mPhotoRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/White"
                    android:paddingBottom="@dimen/margin_15"
                    android:paddingEnd="@dimen/margin_15"
                    android:paddingStart="@dimen/margin_15"
                    tool:listitem="@layout/item_image" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingEnd="@dimen/dp_10"
                    android:paddingStart="@dimen/dp_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="5"
                        android:text="标题"
                        android:textColor="@color/MaterialGrey700"
                        android:textSize="@dimen/sp_12" />

                    <com.szw.framelibrary.view.ClearWriteEditText
                        android:id="@+id/ed_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请输入(必填)"
                        android:inputType="text"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:singleLine="true"
                        android:textColor="@color/MaterialGrey600"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingEnd="@dimen/dp_10"
                    android:paddingStart="@dimen/dp_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="5"
                        android:text="型号"
                        android:textColor="@color/MaterialGrey700"
                        android:textSize="@dimen/sp_12" />

                    <com.szw.framelibrary.view.ClearWriteEditText
                        android:id="@+id/ed_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请输入"
                        android:inputType="text"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:singleLine="true"
                        android:textColor="@color/MaterialGrey600"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingEnd="@dimen/dp_10"
                    android:paddingStart="@dimen/dp_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="5"
                        android:text="出厂年限"
                        android:textColor="@color/MaterialGrey700"
                        android:textSize="@dimen/sp_12" />

                    <com.szw.framelibrary.view.ClearWriteEditText
                        android:id="@+id/ed_date"
                        android:layout_width="0dp"
                        android:maxLength="4"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:text=""
                        android:gravity="center_vertical"
                        android:hint="请输入(例：2018)"
                        android:inputType="number"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:singleLine="true"
                        android:textColor="@color/MaterialGrey600"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingEnd="@dimen/dp_10"
                    android:paddingStart="@dimen/dp_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="5"
                        android:text="薪资待遇"
                        android:textColor="@color/MaterialGrey700"
                        android:textSize="@dimen/sp_12" />

                    <com.szw.framelibrary.view.ClearWriteEditText
                        android:id="@+id/ed_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@color/MaterialGrey100"
                        android:hint="低"
                        android:inputType="number"
                        android:minWidth="75dp"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:singleLine="true"
                        android:textColor="@color/MaterialGrey800"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="@dimen/sp_12" />

                    <View
                        android:layout_width="@dimen/margin_15"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dp_10"
                        android:background="@color/MaterialGrey200" />

                    <com.szw.framelibrary.view.ClearWriteEditText
                        android:id="@+id/ed_pay_height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@color/MaterialGrey100"
                        android:hint="高"
                        android:inputType="number"
                        android:minWidth="75dp"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:singleLine="true"
                        android:textColor="@color/MaterialGrey800"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingEnd="@dimen/dp_10"
                    android:paddingStart="@dimen/dp_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="5"
                        android:text="联系人电话"
                        android:textColor="@color/MaterialGrey700"
                        android:textSize="@dimen/sp_12" />

                    <com.szw.framelibrary.view.ClearWriteEditText
                        android:id="@+id/ed_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请输入"
                        android:inputType="phone"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:singleLine="true"
                        android:textColor="@color/MaterialGrey600"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingEnd="@dimen/dp_10"
                    android:paddingStart="@dimen/dp_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="5"
                        android:text="所在地"
                        android:textColor="@color/MaterialGrey700"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawableEnd="@mipmap/icon_next"
                        android:drawablePadding="@dimen/margin_5"
                        android:gravity="center_vertical"
                        android:hint="请选择"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:singleLine="true"
                        android:textColor="@color/MaterialGrey600"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:singleLine="true"
                        android:text="详细描述"
                        android:textColor="@color/MaterialGrey700"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <com.szw.framelibrary.view.ClearWriteEditText
                    android:id="@+id/ed_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:gravity="start"
                    android:hint="请输入详细描述（必填）"
                    android:inputType="text"
                    android:minHeight="90dp"
                    android:padding="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/MaterialGrey600"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="@dimen/sp_12" />


            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:paddingBottom="@dimen/margin_8"
        android:paddingEnd="@dimen/margin_15"
        android:paddingStart="@dimen/margin_15"
        android:paddingTop="@dimen/margin_8">

        <com.flyco.roundview.RoundTextView
            android:id="@+id/bt_push"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="发布"
            android:textColor="@color/MaterialGrey800"
            android:textSize="@dimen/sp_14"
            app:rv_backgroundColor="@color/colorPrimary"
            app:rv_cornerRadius="@dimen/margin_5" />
    </LinearLayout>

    <include layout="@layout/action_bar_custom" />
</FrameLayout>